
@{
    ViewData["Title"] = "客户信息";
}


<div>
    <div>
        @using (Html.BeginForm())
        {
            <input type="hidden" name="" placeholder="客户姓名" />
            <div>
                <div>
                    <span>客户姓名</span>
                </div>
                <input type="text" name="name" placeholder="请输入客户姓名" />
            </div>
            <div>
                <div>
                    <span>客户性别</span>
                </div>
                <select name="gender">
                    <option value="男">男</option>
                    <option value="女">女</option>
                </select>
            </div>
            <div>
                <div>
                    <span>客户电话</span>
                </div>
                <input type="text" name="phone" placeholder="请输入客户电话" />
            </div>
            <div>
                <div>
                    <span>客户地址</span>
                </div>
                <input type="text" name="address" placeholder="请输入客户地址" />
            </div>
            <div>
                <input type="suu" name="" value="保存" />
                <a href="/Customer/Index">返回</a>
            </div>
        }
    </div>
</div>