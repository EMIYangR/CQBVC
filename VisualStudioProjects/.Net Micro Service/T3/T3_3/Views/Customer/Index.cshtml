
@{
    ViewData["Title"] = "客户管理";
}

<h1>客户管理</h1>

<a href="/Customer/Detail">添加</a>
<table>
    <tr>
        <th>编号</th>
        <th>姓名</th>
        <th>性别</th>
        <th>电话</th>
        <th>地址</th>
        <th>操作</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Gender</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td>
                <a href='@string.Format("/Customer/Remove/{0}",item.Id)' onclick="return confirm('确认？')">删除</a>
            </td>
        </tr>
    }
</table>