@model MVC.Models.Line

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        .yc {
            display: none;
        }
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>详情</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.lineID)

        <div class="form-group">
            @Html.LabelFor(model => model.lineTypeID, "lineTypeID", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DisplayFor(model => model.lineTypeID)
            <div class="col-md-10 yc">
                @Html.DropDownList("lineTypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.lineTypeID, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(model => model.lineName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.lineName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lineName, "", new { @class = "text-danger" })
                <div class="col-md-10">

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.days, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DisplayFor(model => model.days)
                <div class="col-md-10 yc">
                    @Html.EditorFor(model => model.days, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.days, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DisplayFor(model => model.price)
                <div class="col-md-10 yc">
                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.vehicle, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DisplayFor(model => model.vehicle)
                <div class="col-md-10 yc">
                    @Html.EditorFor(model => model.vehicle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vehicle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.hotel, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DisplayFor(model => model.hotel)
                <div class="col-md-10 yc">
                    @Html.EditorFor(model => model.hotel, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.hotel, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.hasMeal, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DisplayFor(model => model.hasMeal)
                <div class="col-md-10 yc">
                    @Html.EditorFor(model => model.hasMeal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.hasMeal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("返回", "Index")
    </div>
</body>
</html>
